<!-- src/views/editToyForm.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Toy</title>
</head>
<body>
  <h1>Edit Toy</h1>
  <form action="/toys/<%= toy.toy_id %>/edit" method="post">
    <input type="hidden" name="_method" value="PUT">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" value="<%= toy.name %>" required>
    <br>
    <label for="category">Category:</label>
    <input type="text" id="category" name="category" value="<%= toy.category %>">
    <br>
    <label for="price">Price:</label>
    <input type="number" id="price" name="price" step="0.01" value="<%= toy.price %>" required>
    <br>
    <label for="quantity">Quantity in Stock:</label>
    <input type="number" id="quantity" name="quantity_in_stock" value="<%= toy.quantity_in_stock %>" required>
    <br>
    <button type="submit">Update Toy</button>
  </form>
</body>
</html>
